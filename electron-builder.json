{
  "appId": "com.whatybot.app",
  "productName": "WhatyBot-DxS",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "public/**/*",
    "server/utils/**/*",
    "profiles/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "publish": [
    {
      "provider": "github",
      "owner": "mrryzensor",
      "repo": "WhatyBot-Baileys"
    }
  ],
  "extraResources": [
    {
      "from": "server",
      "to": "server",
      "filter": ["**/*"]
    },
    {
      "from": "server/node_modules",
      "to": "server/node_modules",
      "filter": ["**/*"]
    },
    {
      "from": ".env",
      "to": "server/.env"
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": "dmg",
    "icon": "icons/icon.icns"
  },
  "win": {
    "target": "nsis",
    "icon": "icons/icon.ico"
  },
  "linux": {
    "target": "AppImage",
    "icon": "icons"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "uninstallerIcon": "icons/Uninstall.ico"
  }
}

